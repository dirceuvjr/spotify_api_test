source 'https://rubygems.org'

gem 'rails', '2.3.12'

gem 'sprockets', '~> 2.0'

gem "rake", "0.8.7"

gem 'uglifier'
gem 'figaro'
gem 'simple_form'
gem 'slim-rails'
gem 'sqlite3'
gem 'turbolinks'

# My setup uses SASS, HAML and CoffeeScript, but you can obviously use substitutes
group :assets do
  gem 'sass'
  gem 'haml'
  gem 'coffee-script'
end

group :development, :test do
  gem 'sprockets-sass'
end